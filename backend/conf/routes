# https://www.playframework.com/documentation/latest/ScalaRouting

GET /api/info com.skewwhiffy.auraltester.controller.InfoController.index()
GET /api/interval com.skewwhiffy.auraltester.controller.IntervalController.index(clef: String, bottomNote: String, intervalQuality: String, intervalSize: Int, keySignature: Option[String] ?= None)
GET /api/keySignature com.skewwhiffy.auraltester.controller.KeySignatureController.index(clef: String, keySignature: Option[String] ?= None)
GET /api/clef com.skewwhiffy.auraltester.controller.ClefController.index(clef: String)
GET /api/scale com.skewwhiffy.auraltester.controller.ScaleController.index(clef: String, note: String, scaleType: String, direction: String)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.versioned(path="/public", file: Asset)
